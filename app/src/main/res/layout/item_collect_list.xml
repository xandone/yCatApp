<?xml version="1.0" encoding="utf-8"?>

<cat.ycatapp.xandone.widget.SwipeMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/collect_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/item_joke_user_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <cat.ycatapp.xandone.widget.UserCircleIcon
                    android:id="@+id/item_joke_user_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/df_icon" />

                <TextView
                    android:id="@+id/item_joke_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_light"
                    android:textSize="14sp"
                    tools:text="二虎" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_joke_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_normal"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_joke_user_ll"
                tools:text="笑话标题" />

            <TextView
                android:id="@+id/item_joke_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:textColor="@color/text_light"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_joke_list_title"
                tools:text="笑话笑话内容笑话内笑话笑话内容笑话内容笑话内容笑话内容笑话内容笑话内容笑话内容笑话内容笑话内容笑话内容内容容笑话内容笑话内容笑话内容笑话内容笑话内容笑话内容笑话内容笑话内容内容" />

            <TextView
                android:id="@+id/item_joke_list_collect_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/collect_list_icon"
                android:textColor="@color/hint_normal"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_joke_list_content"
                tools:text="2018-3-12" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <include layout="@layout/v_delete_layout" />

</cat.ycatapp.xandone.widget.SwipeMenuView>